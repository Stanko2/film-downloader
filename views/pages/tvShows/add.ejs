<%- include('../../header') %>
<h1>Add new TV show</h1>
<hr>
<form action="/series/add/search" method="post" class="form">
    <div class="input-group mb-8">
        <input type="text" name="SeriesName" placeholder="Search ..." class="form-control">
        <button type="submit" class="btn btn-outline-primary">Search</button>
    </div>
</form>
<h2 class="mt-3">Add Manually</h2>
<form class="form" method="post" action="/series/add">
    
    <div class="row">
        <div class="col-8">
            <label for="SeriesName">Name</label>
            <input type="text" name="showName" placeholder="Enter name of the TV show ..." class="form-control col-8" id="filmName">
        </div>
        <div class="col-4">
            <label for="year">First Aired Year</label>
            <input type="number" name="year" class="form-control" id="year">
        </div>
    </div>
    <div class="row mt-3 mb-3">
        <div class="col-6">
            <label for="seasons">Season Number</label>
            <input type="number" name="season" class="form-control" id="season">
        </div>
        <div class="col-6">
            <label for="episode">Episode Number</label>
            <input type="number" name="episode" class="form-control" id="episode">
        </div>
    </div>
    <label for="filmURL">Video file URL</label>
    <input type="text" name="showURL" placeholder="Enter download link" class="form-control" id="filmURL">
    <div class="d-grid gap-2 mt-3">

        <button type="submit" class="btn btn-secondary">Add</button>
    </div>
<%- include('../../footer') %>  
